<Window x:Class="BudgetTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budget Tracker" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <!-- Navigation Menu -->
            <StackPanel DockPanel.Dock="Left" Background="#2c3e50" Width="200">
                <Button Content="Home" Height="50" Foreground="White" Background="#34495e" Click="Home_Click"/>
                <Button Content="Add Expense" Height="50" Foreground="White" Background="#34495e" Click="AddExpense_Click"/>
                <Button Content="Reports" Height="50" Foreground="White" Background="#34495e" Click="Reports_Click"/>
                <Button Content="Settings" Height="50" Foreground="White" Background="#34495e" Click="Settings_Click"/>
            </StackPanel>

            <!-- Main Content -->
            <ContentControl x:Name="MainContent" />
        </DockPanel>
    </Grid>
</Window>
